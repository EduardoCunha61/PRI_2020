extends layout
block content

    style.
        table {
        border-spacing: 0;
        width: 100%;
        border: 1px solid #ddd;
        }
        th {
        cursor: pointer;
        }

    section.blog-area.section
        .container.bootstrap.snippet
            center.h2.w3-teal Avaliações registadas
            a.user-link(href="/evaluations/newevaluation") Criar Avaliação
            br
            .row
                .col-lg-12
                    table.table.table-striped#evaluations
                        thead
                            tr
                                th(style="text-align: center; vertical-align: middle;", onclick='sortTable(0)' width="20%") Tipo
                                th(style="text-align: center; vertical-align: middle;", onclick='sortTable(1)' width="20%") UC
                                th(style="text-align: center; vertical-align: middle;", onclick='sortTable(2)' width="20%") Data
                                th(style="text-align: center; vertical-align: middle;", onclick='sortTable(3)' width="15%") Local

                        each evaluation in evaluations
                            tbody
                                tr
                                    td(style='text-align: center;')= evaluation.tipo
                                    td(style='text-align: center;')= evaluation.uc
                                    td(style='text-align: center;')= evaluation.data
                                    td(style='text-align: center;')= evaluation.local

    script.
        function sortTable(n) {
            var table, rows, switching, i, x, y, shouldSwitch, dir, switchcount = 0;
            table = document.getElementById("users");
            switching = true;
            dir = "asc";
            while (switching) {
                switching = false;
                rows = table.rows;
                for (i = 1; i < (rows.length - 1); i++) {
                    shouldSwitch = false;
                    x = rows[i].getElementsByTagName("TD")[n];
                    y = rows[i + 1].getElementsByTagName("TD")[n];
                    if (dir == "asc") {
                        if (x.innerHTML.toLowerCase() > y.innerHTML.toLowerCase()) {
                        shouldSwitch= true;
                        break;
                        }
                    } else if (dir == "desc") {
                        if (x.innerHTML.toLowerCase() < y.innerHTML.toLowerCase()) {
                            shouldSwitch = true;
                            break;
                        }
                    }
                }
                if (shouldSwitch) {
                    rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                    switching = true;
                    switchcount ++;
                } else {
                    if (switchcount == 0 && dir == "asc") {
                    dir = "desc";
                    switching = true;
                    }
                }
            }
        }

                               
