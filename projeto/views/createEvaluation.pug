extends layout
block content

  link(rel='stylesheet', href='/stylesheets/main-styles.css')    
  link(href='/stylesheets/responsive.css', rel='stylesheet')
  link#bootstrap-css(href="/stylesheets/profile.css" rel="stylesheet")

  .limiter
    .container.emp-profile
      center.h3.title 
        b Create new evaluation

      .container(style="width:75%")
        form(method="POST" action="/evaluations/newevaluation" enctype='multipart/form-data')
          .form-group
            h5 Type
            select.form-control(name="tipo")
              option(value="Teste") Teste
              option(value="Exame") Exame
              option(value="Trabalho") Trabalho
          .form-group
            h5 Date
            input.form-control(name="data" placeholder="When is it happening?")
          .form-group
            h5 UC
            input.form-control(name="uc" placeholder="What is it about?")
          .form-group
            h5 Starts at
            input.form-control(name="hinicio" placeholder="What time does it start?")
          .form-group
            h5 Ends at
            input.form-control(name="hfim" placeholder="What time should it end?")
          .form-group
            h5 Place
            input.form-control(name="local" placeholder="Where is it happening?")
          .form-group  
            h5 File
            input(type='file', name='sampleFile')
          center.col-sm-12
            br
            input.btn.btn-secondary(type='submit' value='Create new evaluation')